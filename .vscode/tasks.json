{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Iniciar Django Server",
            "type": "shell",
            "command": "${workspaceFolder}/venv/Scripts/python.exe",
            "args": [
                "manage.py",
                "runserver",
                "0.0.0.0:8000",
                "--insecure"
            ],
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        }
    ]
} 